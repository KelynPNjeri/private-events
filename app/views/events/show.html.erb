<h1>Single Event</h1>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Name</th>
      <th>Location</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= link_to @event.creator.username, "/users/#{@event.creator.id}" %></td>
        <td><%= @event.name %></td>
        <td><%= @event.location %></td>
        <td><%= @event.date %></td>
        <td><%= link_to 'Index', events_path %></td>
       </tr>
  </tbody>
</table>